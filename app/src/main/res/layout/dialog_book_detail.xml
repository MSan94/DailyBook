<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/book_dialog_custom"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/imageView_Cover"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/book_item_custom"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView_Title"
        android:fontFamily="@font/nanumsquareroundeb"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:lines="1"
        android:textColor="@color/black"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/imageView_Cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="15dp"/>

    <TextView
        android:id="@+id/textView_auth"
        android:fontFamily="@font/nanumsquareroundeb"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@+id/imageView_Cover"
        app:layout_constraintTop_toBottomOf="@+id/textView_Title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="15dp"/>

    <TextView
        android:id="@+id/textView_category"
        android:fontFamily="@font/nanumsquareroundeb"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imageView_Cover"
        app:layout_constraintTop_toBottomOf="@+id/textView_auth"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="15dp"/>

    <TextView
        android:id="@+id/textView_description"
        android:fontFamily="@font/nanumsquareroundeb"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_Cover"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>