<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView_Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/font_color_c"
        android:textSize="16sp"
        android:fontFamily="@font/nanumsquareroundeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView_Contents"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/nanumsquareroundeb"
        app:layout_constraintTop_toBottomOf="@+id/textView_Date"
        app:layout_constraintEnd_toStartOf="@+id/checkbox_Yn"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/checkbox_Yn"
        app:layout_constraintStart_toEndOf="@+id/textView_Contents"
        app:layout_constraintEnd_toStartOf="@+id/textView_Del"
        app:layout_constraintTop_toBottomOf="@+id/textView_Date"
        android:layout_width="40dp"
        android:layout_height="20dp"/>


    <TextView
        android:id="@+id/textView_Del"
        android:text="삭제"
        android:gravity="center"
        android:textColor="@color/font_color_a"
        android:fontFamily="@font/nanumsquareroundeb"
        app:layout_constraintStart_toEndOf="@+id/checkbox_Yn"
        app:layout_constraintTop_toBottomOf="@+id/textView_Date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/background_A"
        android:layout_width="60dp"
        android:layout_height="20dp"/>

    <TextView
        android:layout_marginTop="5dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_Yn"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>